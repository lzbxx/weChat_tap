<view class="swiper-tab" style="display:flex">  
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">1</view>  
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">2</view>  
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">3</view>
    <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="2" bindtap="swichNav">4</view>
    <view class="swiper-tab-list {{currentTab==4 ? 'on' : ''}}" data-current="2" bindtap="swichNav">5</view>  
</view>  
  
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">  
